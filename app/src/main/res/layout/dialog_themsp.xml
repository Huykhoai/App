<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <TextView
          android:layout_gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="Thêm"
          android:textSize="40dp"
          android:id="@+id/dialog_register_tile"
          />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/dialog_register_til_masach"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/dialog_register_txtmasach"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="User Name" />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/dialog_register_til_name"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/dialog_register_txtname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="PassWord" />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/dialog_register_til_giathue"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/dialog_register_txtgiathue"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="ConFirm" />
      </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/dialog_register_til_image"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/dialog_register_txtimage"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Imange" />
      </com.google.android.material.textfield.TextInputLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Thêm"
              android:backgroundTint="#ffde03"
              android:textColor="#000000"
              android:id="@+id/dialog_register_add"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"/>
          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Huỷ"
              android:id="@+id/dialog_register_cancel"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:backgroundTint="#B00020"/>
      </LinearLayout>
  </LinearLayout>

</ScrollView>